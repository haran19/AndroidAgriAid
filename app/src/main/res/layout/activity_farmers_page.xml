<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FarmersPage"
    android:background="@drawable/farmer1">

    <include
        android:id="@+id/update_post_page_toolbar"
        layout="@layout/app_bar_layout" />

    <ImageButton
        android:id="@+id/select_post_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="105dp"
        android:layout_marginRight="20dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/add_image1" />

    <EditText
        android:id="@+id/post_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="157dp"
        android:background="@drawable/inputs"
        android:ems="10"
        android:hint="Write something about your post"
        android:inputType="textMultiLine"
        android:padding="15dp"
        android:paddingTop="5dp" />

    <Button
        android:id="@+id/update_post_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="94dp"
        android:layout_marginBottom="88dp"
        android:background="@drawable/button"
        android:padding="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:text="Create a post"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <Button
        android:id="@+id/view_farmers_post"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/update_post_button"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-2dp"
        android:layout_marginBottom="29dp"
        android:background="@drawable/button"
        android:padding="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:text="View Farmers Post"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

</RelativeLayout>