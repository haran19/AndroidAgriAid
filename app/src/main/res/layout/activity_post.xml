<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostActivity"
    android:background="@drawable/postinfo">

    <include
        android:id="@+id/update_post_page_toolbar"
        layout="@layout/app_bar_layout" />

    <ImageButton
        android:id="@+id/select_post_image"
        android:layout_width="202dp"
        android:layout_height="194dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="245dp"
        android:background="@color/common_google_signin_btn_text_light_disabled"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/imageinfo" />

    <EditText
        android:id="@+id/post_description"
        android:layout_width="wrap_content"
        android:layout_height="73dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        android:layout_marginStart="47dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="75dp"
        android:background="@drawable/inputs"
        android:ems="10"

        android:hint="Type your information"
        android:inputType="textMultiLine"
        android:padding="15dp"
        android:paddingTop="5dp" />

    <EditText
        android:id="@+id/post_description2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"

        android:layout_marginStart="43dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="156dp"
        android:background="@drawable/inputs"
        android:ems="10"

        android:hint="Title"
        android:inputType="textMultiLine"
        android:padding="15dp"
        android:paddingTop="5dp" />

    <Button
        android:id="@+id/update_post_button"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/post_description"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="82dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button"
        android:padding="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:text="POST your Info"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="316dp"
        android:layout_height="54dp"
        android:layout_alignStart="@+id/select_post_image"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-56dp"
        android:layout_marginTop="69dp"
        android:text="Post in Information Center"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="223dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_post_image"
        android:layout_alignStart="@+id/select_post_image"
        android:layout_marginTop="-243dp"
        android:text="Upload any photos here..."
        android:textSize="14sp" />

</RelativeLayout>